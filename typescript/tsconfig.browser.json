{
  "compilerOptions": {
    "target": "ES2020", // Modern JS, works in Node.js 14+ and browsers
    "module": "ESNext", // Use ES modules for flexibility
    // "moduleResolution": "bundler", // Support Node.js module resolution
    "lib": ["ES2020", "DOM"],
    "outDir": "./browser",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./compile-browser.ts"],
  "exclude": ["node_modules"]
}
