{
  "compilerOptions": {
    "target": "ES6", // Modern JS, works in Node.js 14+ and browsers
    "module": "es6", // Use ES modules for flexibility
    // "moduleResolution": "bundler", // Support Node.js module resolution
    "lib": ["ES6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
    // "declaration": true, // generate .d.ts files
    // "declarationDir": "./types" // generate .d.ts files in the dist folder
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
