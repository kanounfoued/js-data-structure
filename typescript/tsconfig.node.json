{
  "compilerOptions": {
    "target": "ES2020", // Modern JS, works in Node.js 14+ and browsers
    "module": "ESNext", // Use ES modules for flexibility
    "moduleResolution": "node", // Support Node.js module resolution
    "lib": ["ES2020"],
    "outDir": "./node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./compile-node.ts"],
  "exclude": ["node_modules"]
}
